<div data-hook="admin_flexible_banner_form_fields">
  <div class="alpha omege twelve columns" data-hook="admin_flexible_banner_form">

    <%= f.field_container :name do %>
      <%= f.label :name %> <span class="required">*</span><br />
      <%= f.text_field :name, :class => 'fullwidth title' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :link do %>
      <%= f.label :link %><br />
      <%= f.text_field :link, :class => 'fullwidth title' %>
    <% end %>

    <%= f.field_container :active do %>
      <%= f.check_box :active %>
      <%= f.label :active %>
    <% end %>

    <%= f.field_container :body do %>
      <%= f.label :body %> <span class="required">*</span><br />
      <%= f.text_area :body, {rows: 12, :class => 'fullwidth'} %>
      <%= f.error_message_on :body %>
    <% end %>
</div>
<div class="clear"></div>